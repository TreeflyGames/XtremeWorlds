{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Networking": {
    "IPAddress": "127.0.0.1",
    "Port": 7234,
    "SecurePort": 7235,
    "CertificatePath": "reoria.pem",
    "CertificateKeyPath": "reoria.key.pem"
  },
  "Security": {
    "Cryptography": {
      "Algorithm": "SHA256",
      "AlgorithmNamespace": "System.Security.Cryptography",
      "AlgorithmAssembly": "System.Security.Cryptography.Algorithms",
      "SaltLength": 16,
      "Iterations": 10000
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Environment"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/application-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}